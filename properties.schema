{
  "type": "object",
  "$schema": "http://json-schema.org/draft-04/schema",
  "id": "http://jsonschema.net",
  "required": false,
  "properties": {
    "pluginLocations": {
      "type": "object",
      "required": true,
      "properties": {
        "config": {
          "type": "object"
        },
        "course": {
          "type": "object",
          "properties": {
            "_blockSlider": {
              "type": "object",
              "required": false,
              "legend": "BlockSlider",
              "properties": {
                "_isEnabled": {
                  "type": "boolean",
                  "required": true,
                  "default": true,
                  "title": "Is enabled",
                  "inputType": {"type": "Boolean", "options": [true, false]},
                  "validators": [],
                  "help": "If set to 'false', BlockSlider will be disabled on all articles."
                }
              }
            }
          }
        },
        "contentobject": {
          "type": "object"
        },
        "article": {
          "type": "object",
          "properties": {
            "_blockSlider": {
              "type":"object",
              "required":false,
              "legend": "BlockSlider",
              "properties": {
                "_isEnabled": {
                  "type": "boolean",
                  "required": true,
                  "default": false,
                  "title": "Is enabled",
                  "inputType": {"type": "Boolean", "options": [true, false]},
                  "validators": [],
                  "help": "If set to 'true', then all blocks within this article would have slide effect."
                },
                "_arrows": {
                  "type":"object",
                  "legend": "Arrows",
                  "properties": {
                    "_isActive": {
                      "type": "boolean",
                      "required": false,
                      "default": true,
                      "title": "Is active",
                      "inputType": {"type": "Boolean", "options": [true, false]},
                      "validators": [],
                      "help": "Set to true/false to display/hide arrow navigation controls."
                    }
                  }
                },
                "_tabs": {
                  "type":"object",
                  "legend": "Tabs",
                  "properties": {
                    "_isActive": {
                      "type": "boolean",
                      "required": false,
                      "default": true,
                      "title": "Is active",
                      "inputType": {"type": "Boolean", "options": [true, false]},
                      "validators": [],
                      "help": "Set to true or false to display/hide tabbed navigation."
                    },
                    "_useBlockTitle": {
                      "type": "boolean",
                      "required": false,
                      "default": false,
                      "title": "Use block title",
                      "inputType": {"type": "Boolean", "options": [true, false]},
                      "validators": [],
                      "help": "Set to true to display the block title text within tabs. Set to false to display an icon for each tab."
                    }
                  }
                },
               "_initial": {
                  "type": "number",
                  "required": true,
                  "title": "Initial",
                  "inputType": "Number",
                  "default": 1,
                  "validators": ["number"],
                  "help": "Which block to show on initial load. For example, a value of 2 will show the 2nd block."
                },
                "_height": {
                  "type": "string",
                  "required": true,
                  "default": "auto",
                  "title": "Height",
                  "inputType": "Text",
                  "validators": ["required"],
                  "help": "Fix the height of the blockslider to this value. For example, a value of 600 will set the blockslider to 600px high. Defaults to 'auto' if not specified."
                },
								"_noAnimate": {
									"type": "boolean",
									"required": false,
									"default": false,
									"title": "No animation",
									"inputType": {"type": "Boolean", "options": [true, false]},
									"validators": [],
									"help": "Set to true to remove the animated sliding effect."
								}
              }
            }
          }
        },
        "block": {
          "type": "object"
        },
        "component": {
          "type": "object"
        }
      }
    }
  }
}
